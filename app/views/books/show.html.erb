<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @book.title %>
      </p>
      <%= link_to @book.user.name, root_path, class: :prototype__user %>
      <% if user_signed_in? && current_user.id == @book.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_book_path(@book.id), method: :get, class: :prototype__btn %>
          <%= link_to "削除する", book_path(@book.id), method: :delete, class: :prototype__btn %>
        </div>
      <% end %>
      <div class="prototype__image">
        <%= image_tag @book.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">ジャンル</p>
          <p class="detail__message">
            <%= @book.genre %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">内容</p>
          <p class="detail__message">
            <%= @book.content %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">おすすめポイント</p>
          <p class="detail__message">
            <%= @book.recommend %>
          </p>
        </div>
      </div>
      <div class="prototype__comments">
        <%# if user_signed_in? %>
          <%# form_with model: ,local: true do |f|%>
            <div class="field">
              <%# <%= f.label :hoge, "コメント" %><br />
