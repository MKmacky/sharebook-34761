<div class="card">
  <%= link_to image_tag(book.image, class: :card__img ), root_path%>
  <div class="card__body">
    <%= link_to book.title, root_path, class: :card__title%>
    <p class="card__summary">
      <%= book.genre %>
    </p>
    <%= link_to book.user.name, root_path, class: :card__user %>
  </div>
</div>